{
  "name": "hprim-tool",
  "version": "1.0.3",
  "description": "Analyseur de résultats médicaux HPRIM",
  "main": "main.js",
  "homepage": "https://github.com/yokoinc/hprimtool",
  "author": {
    "name": "HPRIM Tool Team",
    "email": "cuffel.gregory@gmail.com"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "test": "node test-simple.js",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "dist": "npm run build"
  },
  "build": {
    "appId": "com.medical.hprimtool",
    "productName": "HPRIM Tool",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "i18n.js",
      "icons/**/*"
    ],
    "mac": {
      "category": "public.app-category.medical",
      "target": {
        "target": "dmg",
        "arch": ["arm64", "x64"]
      },
      "icon": "icons/icon.icns",
      "gatekeeperAssess": false,
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "title": "HPRIM Tool",
      "icon": "icons/icon.icns",
      "background": "build/dmg-background.png",
      "window": {
        "width": 600,
        "height": 450
      },
      "contents": [
        {
          "x": 150,
          "y": 200,
          "type": "file"
        },
        {
          "x": 450,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "icons/icon.png",
      "publisherName": "HPRIM Tool",
      "verifyUpdateCodeSignature": false,
      "signDlls": false,
      "forceCodeSigning": false,
      "fileAssociations": [
        {
          "ext": "hpr",
          "name": "HPRIM File",
          "description": "Medical test results file"
        },
        {
          "ext": "hpm",
          "name": "HPRIM File",
          "description": "Medical test results file"
        },
        {
          "ext": "hprim",
          "name": "HPRIM File",
          "description": "Medical test results file"
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "rpm",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "icons/",
      "category": "Office",
      "description": "Analyseur de résultats biologiques HPRIM",
      "desktop": {
        "Name": "HPRIM Tool",
        "Comment": "Analyseur de résultats biologiques",
        "GenericName": "Analyseur médical",
        "Keywords": "medical;hprim;laboratory;results;analyse;biologie;",
        "StartupWMClass": "HPRIM Tool",
        "MimeType": "application/x-hprim;"
      }
    },
    "deb": {
      "priority": "optional",
      "depends": [
        "libgtk-3-0",
        "libnotify4",
        "libnss3",
        "libxss1",
        "libxtst6",
        "xdg-utils",
        "libatspi2.0-0",
        "libasound2"
      ],
      "packageCategory": "utils",
      "maintainer": "HPRIM Tool Team <cuffel.gregory@gmail.com>"
    },
    "rpm": {
      "depends": [
        "gtk3",
        "libnotify",
        "nss",
        "libXScrnSaver",
        "libXtst",
        "xdg-utils",
        "at-spi2-core",
        "alsa-lib"
      ],
      "category": "Applications/Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "HPRIM Tool"
    },
    "fileAssociations": [
      {
        "ext": "hpr",
        "name": "HPRIM Medical File",
        "description": "Medical test results file",
        "mimeType": "application/x-hprim",
        "icon": "icons/file_icon.png",
        "role": "Editor"
      },
      {
        "ext": "hpm", 
        "name": "HPRIM Medical File",
        "description": "Medical test results file",
        "mimeType": "application/x-hprim",
        "icon": "icons/file_icon.png",
        "role": "Editor"
      },
      {
        "ext": "hprim",
        "name": "HPRIM Medical File", 
        "description": "Medical test results file",
        "mimeType": "application/x-hprim",
        "icon": "icons/file_icon.png",
        "role": "Editor"
      }
    ]
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.0.0"
  }
}