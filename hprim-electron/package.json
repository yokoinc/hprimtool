{
  "name": "hprim-tool",
  "version": "1.0.1",
  "description": "Analyseur de résultats médicaux HPRIM",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "node test-simple.js",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "dist": "npm run build"
  },
  "build": {
    "appId": "com.medical.hprimtool",
    "productName": "HPRIM Tool",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "i18n.js",
      "icons/**/*"
    ],
    "mac": {
      "category": "public.app-category.medical",
      "target": {
        "target": "dmg",
        "arch": ["arm64", "x64"]
      },
      "icon": "icons/icon.icns",
      "gatekeeperAssess": false,
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "title": "HPRIM Tool",
      "icon": "icons/icon.icns",
      "background": "build/dmg-background.png",
      "window": {
        "width": 600,
        "height": 450
      },
      "contents": [
        {
          "x": 150,
          "y": 200,
          "type": "file"
        },
        {
          "x": 450,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "additionalDMGOptions": {
        "window": {
          "position": {
            "x": 400,
            "y": 100
          }
        }
      }
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "icons/icon.png",
      "publisherName": "HPRIM Tool",
      "fileAssociations": [
        {
          "ext": "hpr",
          "name": "HPRIM File",
          "description": "Medical test results file"
        },
        {
          "ext": "hpm",
          "name": "HPRIM File",
          "description": "Medical test results file"
        },
        {
          "ext": "hprim",
          "name": "HPRIM File",
          "description": "Medical test results file"
        }
      ]
    },
    "linux": {
      "target": "AppImage",
      "icon": "icons/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "HPRIM Tool"
    },
    "fileAssociations": [
      {
        "ext": "hpr",
        "name": "HPRIM File",
        "description": "Medical test results file",
        "role": "Viewer"
      },
      {
        "ext": "hpm",
        "name": "HPRIM File",
        "description": "Medical test results file",
        "role": "Viewer"
      },
      {
        "ext": "hprim",
        "name": "HPRIM File",
        "description": "Medical test results file",
        "role": "Viewer"
      }
    ]
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.0.0"
  }
}